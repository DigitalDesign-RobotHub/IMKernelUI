<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="OK_Button_Style" TargetType="Button">
    <Setter Property="Background" Value="{StaticResource OK_Brush}" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="{StaticResource OK_HOVER_Brush}" />
      </Trigger>
      <Trigger Property="IsPressed" Value="True">
        <Setter Property="Background" Value="{StaticResource OK_PRESSED_Brush}" />
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="Cancel_Button_Style" TargetType="Button">
    <Setter Property="Background" Value="{StaticResource Cancel_Brush}" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="{StaticResource CANCEL_HOVER_Brush}" />
      </Trigger>
      <Trigger Property="IsPressed" Value="True">
        <Setter Property="Background" Value="{StaticResource CANCEL_PRESSED_Brush}" />
      </Trigger>
    </Style.Triggers>
  </Style>

</ResourceDictionary>

<UserControl
  x:Class="IMKernelUI.View.PartView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
  xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
  xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:model="clr-namespace:IMKernelUI.ViewModel"
  xmlns:view="clr-namespace:IMKernelUI.View"
  d:Background="LightBlue"
  d:DataContext="{d:DesignInstance Type=model:PartViewModel}"
  d:DesignWidth="400"
  d:FontSize="20"
  mc:Ignorable="d">
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/IMKernelUI;component/Properties/DesignTimeResources.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <StackPanel>

    <!--#region 基本信息-->

    <dxlc:LayoutControl Padding="2,2,2,2">
      <dxlc:LayoutGroup Orientation="Vertical">
        <!--  name  -->
        <dxlc:LayoutItem Label="名称：">
          <dxe:TextEdit
            HorizontalContentAlignment="Center"
            NullText="请输入名称"
            Text="{Binding Name, FallbackValue='ErrorName', Mode=TwoWay}" />
        </dxlc:LayoutItem>
        <dxlc:LayoutItem>
          <Button Command="{Binding AddNewJointCommand}" Content="添加连接点" />
        </dxlc:LayoutItem>
      </dxlc:LayoutGroup>
    </dxlc:LayoutControl>

    <!--#endregion-->

    <!--#region 连接点-->

    <GroupBox Padding="2,2,2,2" Header="连接点">
      <StackPanel ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">

        <Border BorderBrush="#ababab" BorderThickness="1">
          <Grid x:Name="Connections_Grid">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="1" />
              <ColumnDefinition />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition />
              <RowDefinition Height="Auto" />
              <RowDefinition />
              <RowDefinition />
            </Grid.RowDefinitions>

            <!--#region  Header-->

            <GridSplitter
              Grid.RowSpan="99"
              Grid.Column="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="#ababab" />
            <Rectangle
              Grid.Row="1"
              Grid.Column="2"
              Height="1"
              Margin="10,0,10,0"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Fill="Black" />
            <TextBlock
              Grid.RowSpan="3"
              Grid.Column="0"
              Margin="5,0,5,0"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Text="编号" />
            <TextBlock
              Grid.Column="2"
              HorizontalAlignment="Center"
              Text="接口位姿" />
            <TextBlock
              Grid.Row="2"
              Grid.Column="2"
              HorizontalAlignment="Center"
              Text="运动方向" />
            <TextBlock
              Grid.RowSpan="3"
              Grid.Column="3"
              Margin="5,0,5,0"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Text="新增" />
            <TextBlock
              Grid.RowSpan="3"
              Grid.Column="4"
              Margin="5,0,5,0"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Text="删除" />

            <!--#endregion-->

            <Label
              Grid.Row="3"
              Padding="2,2,2,2"
              HorizontalContentAlignment="Center"
              VerticalContentAlignment="Center"
              Background="#ffc"
              Content="新增" />
            <Button
              Grid.Row="3"
              Grid.Column="2"
              Grid.ColumnSpan="3"
              Padding="0,0,0,0"
              HorizontalContentAlignment="Center"
              VerticalContentAlignment="Center"
              Background="LightGray"
              Command="{Binding AddNewJointCommand}"
              Content="➕"
              Foreground="{StaticResource OK_Brush}" />
          </Grid>
        </Border>

        <Border
          Margin="0,5,0,0"
          Padding="2,2,2,2"
          d:Visibility="Visible"
          BorderBrush="#ababab"
          BorderThickness="1"
          Visibility="{Binding IsSettingVisibility}">
          <StackPanel>
            <view:TrsfView DataContext="{Binding TrsfVM}" Visibility="{Binding Visibility}" />
            <view:MovementFormulaView DataContext="{Binding MFVM}" Visibility="{Binding Visibility}" />
          </StackPanel>
        </Border>

      </StackPanel>
    </GroupBox>

    <!--#endregion-->

  </StackPanel>

</UserControl>
